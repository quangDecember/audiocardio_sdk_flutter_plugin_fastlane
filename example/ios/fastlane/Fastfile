# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"
  lane :custom_lane do
    # add actions here: https://docs.fastlane.tools/actions
  end

  desc "Build and upload the example app to TestFlight"
  lane :testflight do
    # App Store Connect API key via GitHub Secrets (base64 p8 content recommended)
    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key: ENV['ASC_KEY'],
      is_key_content_base64: true
    )

    # App identifier can be overridden via env var
    bundle_id = (ENV['APP_IDENTIFIER'] || 'com.audiocardio.sdk.example')

    # Install CocoaPods (uses system CocoaPods on CI)
    cocoapods(
      clean_install: true,
      podfile: "Podfile"
    )

    # Build the app for App Store distribution
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,
      include_bitcode: false,
      xcargs: "-allowProvisioningUpdates"
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      distribute_external: false,
      skip_waiting_for_build_processing: true
    )
  end
end
